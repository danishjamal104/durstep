<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/new_payment_list_item_statusIllustration_v"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@color/menu_item_selected"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/new_payment_list_item_statusIllustration_v"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="0dp">

            <TextView
                android:id="@+id/new_payment_list_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rinkiya ke papa"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="6dp"/>


            <TextView
                android:id="@+id/new_payment_list_item_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1234567895"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/new_payment_select_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>