<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottom_bar_menu_item_theme" parent="Widget.AppCompat.TextView">
        <item name="background">?android:attr/selectableItemBackground</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="auth_til_theme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>

    <style name="auth_til_et_theme" parent="Widget.AppCompat.EditText">
        <item name="android:padding">18dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="auth_button_theme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">5dp</item>
        <item name="elevation">12dp</item>
        <item name="android:textSize">@dimen/login_signUp_button_textSize</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

</resources>